function refreshForm(innerHTML) {
  const statusDiv = document.getElementById('data-timesheet-<%= @timesheet.id%>').parentNode;
  // statusDiv.innerHTML = '';
  statusDiv.innerHTML = innerHTML;
}

if (window.location.pathname === '/dashboard') {
  document.getElementById('data-timesheet-<%= @timesheet.id%>').remove()
} else {
  document.querySelectorAll(".accept-reject-form").forEach((form) => {
    form.remove()
  })
  refreshForm('<%= j render "timesheet_status", timesheet: @timesheet %>');
}
