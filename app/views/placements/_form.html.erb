<% my_apprentices = [] %>
<% my_apprentice_ids = current_user.apprentices %>
<% my_apprentice_ids.each do |x| %>
<% my_apprentices << User.find(x.user_id).first_name %>
<% end %>

<% my_host_validators = [] %>
<% my_host_validator_ids = current_user.host_validators %>
<% my_host_validator_ids.each do |x| %>
<% my_host_validators << User.find(x.user_id).first_name %>
<% end %>

<%= simple_form_for @placement do |f| %>
  <%= f.input :host_validator_id, label: 'Primary Validator', class: "form-control" %>
  <%= f.input :host_validator_id, label: 'Secondary Validator', class: "form-control" %>
  <%= f.input :host_invoice_contact_id, label: 'Invoice Contact', class: "form-control" %>
  <%= f.input :apprentice_id, label: 'Apprentice', :collection => my_apprentices, class: "form-control" %>
  <%= f.input :pl_start_date, label: 'Placement Start Date', class: "form-control" %>
  <%= f.input :pl_end_date, label: 'Placement End Date', class: "form-control" %>
  <%= f.input :address, label: "Postcode", class: "form-control" %>
  <%= f.input :interview_date, placeholder: 'DD/MM/YYYY', class: "form-control" %>
  <%= f.input :hourly_rate_cents, class: "form-control" %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
<%= link_to "back", :back %>


