<h1>
  <%= Time.now >= 12 ? 'Good afternoon,' : 'Good morning,' %><%= "#{current_user.first_name}!" %>
</h1>
<p><%= current_user.role %></p>
<%#= link_to 'Timesheets', apprentice_placement_timesheets_path %>
<%= link_to "Placements History", apprentice_placements_path(@apprentice) %>
<%= link_to "Timesheets History", timesheets_path %>

<br>

<% @timesheets.each do |timesheet| %>
  <% timesheet.timesheet_segments.each do |timesheetsegment| %>
    <%= timesheetsegment.date.strftime('%a, %d %B %Y') %>
    <%= simple_form_for [@apprentice, timesheet.placement, timesheet, timesheetsegment] do |f| %>
      <%= f.input :type_of_work, collection: @type_of_work %>
      <%= f.input :hours_worked %>
      <%= f.submit %>
    <% end %>
  <% end %>
<% end %>

