<h1>Timesheets for Placement <%= @placement.id %></h1>
<% if @timesheets.first.id.nil? %>
  <h2>No timesheets yet!</h2>
<% else %>
  <% i = 0 %>
  <%= @timesheets.first.week_start.strftime("%B") %>
  <% @timesheets.each do |timesheet| %>
    <% timesheet_month = @timesheets[i].week_start %>
    <% month = timesheet.week_start.month %>
    <% if month == timesheet_month.month %>
      <p><%= timesheet.week_start %> - <%= timesheet.week_end %></p>
    <% else %>
      <%= timesheet.week_start.strftime("%B") %>
      <p><%= timesheet.week_start %> - <%= timesheet.week_end %></p>
    <% i += 1 %>
    <% end %>
  <% end %>
<% end %>
